.page-admin-savesettings
  .panel.panel-default
    .panel-heading Website
    .panel-body
      form(role="form", name="website", novalidate)
        div.form-group(ng-class="{'has-error': hasError('website.title')}")
          label.control-label(for="title") Blog Title
          input.form-control(name="title", ng-model="settings.website.title", placeholder="Enter the blog title", required)
          span.control-label(ng-show="hasError('website.title.required')") Required!
  
        div.form-group(ng-class="{'has-error': hasError('website.headline')}")
          label.control-label(for="headline") Blog headline
          textarea.form-control(name="headline", ng-model="settings.website.headline", placeholder="")
  
        div.actions
          a.btn.btn-primary(type="button", ng-click="saveWebsite(settings, website.$invalid)") Save

  .panel.panel-default
    .panel-heading Social
    .panel-body
      form(role="form", name="social", novalidate)
        div.form-group(ng-class="{'has-error': hasError('social.twitter')}")
          label.control-label(for="twitter") Twitter Account
            i.form-help.fa.fa-info-circle(tooltip="Your twitter username. This will enable the \"follow me\" button on the homepage, the link to your twitter stream and the \"share\" button on posts")
          input.form-control(name="twitter", ng-model="settings.social.twitter")
  
        div.form-group(ng-class="{'has-error': hasError('social.linkedin')}")
          label.control-label(for="linkedin") Linkedin Account
          input.form-control(name="linkedin", ng-model="settings.social.linkedin")

        div.form-group(ng-class="{'has-error': hasError('social.github')}")
          label.control-label(for="github") Github Account
          input.form-control(name="github", ng-model="settings.social.github")

        div.actions
          a.btn.btn-primary(type="button", ng-click="saveSocial(settings, social.$invalid)") Save
  
  .panel.panel-default
    .panel-heading Admin user
    .panel-body
      form(role="form", name="admin", novalidate)
        div.form-group(ng-class="{'has-error': hasError('admin.username')}")
          label.control-label(for="username") Username
          input.form-control(name="username", ng-model="settings.adminUser.username", required)
          span.control-label(ng-show="hasError('admin.username.required')") Required!
        
        div.form-group(ng-class="{'has-error': hasError('admin.password')}")
          label.control-label(for="password") New Password
          input.form-control(name="password", type="password", ng-model="settings.adminUser.password", placeholder="")
        div.form-group(ng-class="{'has-error': hasError('admin.confirm_password')}")
          label.control-label(for="confirm_password") Confirm new Password
          input.form-control(name="confirm_password", type="password", ui-validate=" '$value==settings.adminUser.password'", ui-validate-watch=" 'settings.adminUser.password' ", placeholder="", ng-model="confirm_password")
          span.control-label(ng-show="hasError('admin.confirm_password.validator')") Passwords do not match
        
        div.actions
          a.btn.btn-primary(type="button", ng-click="saveAdminUser(settings, admin.$invalid)") Save

